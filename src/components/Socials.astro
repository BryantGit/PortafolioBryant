---
const { href = "#" } = Astro.props;
---

<style>
  .badge-shine {
    background: linear-gradient(120deg, #1a1a1a 40%, #2c2c2c, #1a1a1a);
    background-size: 200% 100%;
    animation: background-shine 6s linear infinite;
  }

  @keyframes background-shine {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }
</style>

<a
  {...Astro.props}
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  role="link"
  class="
    inline-flex items-center gap-2
    px-4 py-1
    text-gray-300 text-sm font-medium
    border border-gray-700 rounded-full
    badge-shine
    hover:border-white hover:text-white hover:bg-white/10
    transition-colors duration-200 ease-in-out
    focus:outline-none focus-visible:ring focus-visible:ring-blue-400 focus-visible:ring-offset-2
    max-w-fit
  "
>
  <slot />
</a>
