---
import GitHub from "../assets/icons/GitHub.astro"
import LinkedIn from "../assets/icons/LinkedIn.astro"
import CVEN from "../assets/files/CV_Bryant_Ponce_EN.pdf"
import CVES from "../assets/files/CV_Bryant_Ponce_ES.pdf"
const currentYear = new Date().getFullYear()
---

<footer class="w-full max-w-4xl mx-auto px-6 py-10 flex flex-col gap-8 select-none text-white/80">
  <!-- Título y correo alineados a la izquierda -->
  <div class="flex flex-col items-start gap-2">
    <h2 class="text-2xl font-semibold select-text text-white">Colaboremos en tus proximos proyectos.</h2>

    <a
      href="mailto:bryant_ponce@outlook.com"
      class="text-blue-400 text-lg font-medium cursor-pointer select-none hover:underline"
      onmousedown="event.preventDefault()"
      onselectstart="return false"
      aria-label="Enviar correo a Bryant Ponce"
    >
      bryant_ponce@outlook.com
    </a>
  </div>

  <!-- Links y redes sociales en flex -->
  <div class="flex flex-col md:flex-row justify-between items-center text-sm gap-4 md:gap-0 border-t border-white/20 pt-6">
    
    <nav class="flex gap-6">
      <button
        class="hover:text-blue-400 underline cursor-pointer"
        onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
        aria-label="Regresar arriba"
      >
        Regresar arriba
      </button>
      <a
        href={CVES}
        target="_blank"
        rel="noopener noreferrer"
        class="hover:text-blue-400 underline"
        aria-label="Descargar CV en Español"
      >
        CV ES
      </a>
      <a
        href={CVEN}
        target="_blank"
        rel="noopener noreferrer"
        class="hover:text-blue-400 underline"
        aria-label="Descargar CV en Inglés"
      >
        CV EN
      </a>
    </nav>

    <div class="flex gap-6">
      <a
        href="https://linkedin.com/in/bryant-ponce"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="LinkedIn"
        class="hover:text-blue-400 transition"
      >
        <LinkedIn />
      </a>
      <a
        href="https://github.com/BryantGit"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub"
        class="hover:text-blue-400 transition"
      >
        <GitHub />
      </a>
    </div>
  </div>

  <p class="mt-6 text-xs text-white/40 select-text text-center md:text-left">
    © {currentYear} Bryant Ponce. Todos los derechos reservados.
  </p>
</footer>
