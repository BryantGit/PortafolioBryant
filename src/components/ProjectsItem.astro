---
import Badge from "./Badge.astro";

interface Technology {
  name: string
  icon?: string
  color?: string
}

interface Props {
  name: string
  description: string
  technologies?: Technology[]
  github?: string
  demo?: string
}

const { name, description, technologies = [], github, demo } = Astro.props
---
<div class="rounded-2xl border border-white/10 bg-white/5 p-6 flex flex-col gap-4 transition-shadow duration-300 hover:shadow-lg">
  <!-- T√≠tulo -->
  <h3 class="text-xl font-bold text-white">{name}</h3>
  

  <!-- Tecnolog√≠as -->
  <div class="flex flex-wrap gap-2">
    {technologies.map(tech => (
      <Badge name={tech.name} color={tech.color}>
        {tech.icon && <img src={tech.icon} alt={tech.name} class="w-4 h-4 mr-1" />}
        {tech.name}
      </Badge>
    ))}
  </div>

  <!-- Descripci√≥n -->
  <p class="text-sm text-white/80 leading-relaxed">{description}</p>

  <!-- Botones -->
  <div class="mt-auto flex gap-3 pt-2">
    {github && (
      <a href={github} target="_blank" rel="noopener noreferrer"
         class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-white/10 text-sm text-white hover:bg-white/10 transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 .5C5.37.5 0 5.87 0 12.5c0 5.28 3.438 9.747 8.205 11.324.6.11.82-.26.82-.577 0-.285-.01-1.04-.015-2.04-3.338.726-4.042-1.61-4.042-1.61-.546-1.385-1.333-1.753-1.333-1.753-1.09-.745.083-.729.083-.729 1.205.085 1.838 1.24 1.838 1.24 1.07 1.834 2.807 1.304 3.492.997.11-.776.42-1.305.763-1.605-2.665-.304-5.466-1.332-5.466-5.932 0-1.31.468-2.38 1.235-3.22-.125-.304-.535-1.527.115-3.176 0 0 1.005-.322 3.3 1.23a11.5 11.5 0 013.005-.404c1.02.005 2.045.138 3.005.404 2.28-1.552 3.28-1.23 3.28-1.23.655 1.65.245 2.872.12 3.176.77.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.922.43.372.81 1.103.81 2.222 0 1.604-.015 2.896-.015 3.286 0 .32.21.694.825.576C20.565 22.247 24 17.78 24 12.5 24 5.87 18.627.5 12 .5z"/>
        </svg>
        GitHub
      </a>
    )}
    {demo && (
      <a href={demo} target="_blank" rel="noopener noreferrer"
         class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-[#5e5eff] via-[#8678f9] to-[#a78bfa] text-sm text-white font-medium animate-shine transition hover:opacity-90">
        üåê Ver Demo
      </a>
    )}
  </div>
</div>

