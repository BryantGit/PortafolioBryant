.card {
    position: relative;
    padding: 2rem;
    border-radius: 1rem;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    text-align: center;
    transition: background 0.3s ease;
    overflow: hidden;
    border: 2px solid transparent;
  }

  .card h3 {
    font-size: 3rem;
