  }

  .card p {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.8);
  }

  /* Efecto de resplandor con CSS puro */
  .card::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: radial-gradient(circle at center, rgba(59, 130, 246, 0.4), transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 0;
  }

  .card:hover::before {
    opacity: 1;
  }

  /* Para que el contenido est茅 encima del efecto */
  .card > * {
    position: relative;
    z-index: 1;
  }



</style>

