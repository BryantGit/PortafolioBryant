.card {
    position: relative;
    padding: 2rem;
    border-radius: 1rem;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    text-align: center;
    transition: background 0.3s ease;
    overflow: hidden;
    border: 2px solid transparent;
  }

  .card h3 {
    font-size: 3rem;
    font-weight: bold;
    color: #60a5fa; /* azul */
    margin-bottom: 0.5rem;
  }

  .card p {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.8);
  }

  /* Efecto de resplandor con CSS puro */
  .card::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: radial-gradient(circle at center, rgba(59, 130, 246, 0.4), transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 0;
  }

  .card:hover::before {
    opacity: 1;
  }

  /* Para que el contenido est茅 encima del efecto */
  .card > * {
    position: relative;
    z-index: 1;
  }



</style>

