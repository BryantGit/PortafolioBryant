---
import Header from "../components/Header.astro"; 
import "../styles/global.css";
import logo from '../assets/logo.png';
import yonne from '../assets/yone.jpeg';
// Supports weights 100-900
import '@fontsource-variable/onest';
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={logo.src} />
		<meta name="generator" content={Astro.generator} />
		<title>Bryant Ponce</title>
	</head>
	<body>
		<!-- Background gradient 
		-->
		<div class="absolute top-0 z-[-2] h-screen w-screen bg-black bg-[radial-gradient(ellipse_100%_100%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
		<div class="absolute top-0 left-0 z-[-1] w-screen h-screen overflow-hidden">
		<div class="absolute w-10 h-4 bg-blue-500 rounded-full opacity-20 animate-ping top-1/4 left-1/3"></div>
		<div class="absolute w-16 h-4 bg-purple-500 rounded-full opacity-10 animate-pulse top-2/3 left-2/3"></div>
		<div class="absolute w-8 h-4 bg-pink-500 rounded-full opacity-30 animate-bounce top-1/2 left-1/4"></div>
		</div>
		
		<Header/>
		<slot />
	</body>

</html>

<style is:global>
	:root{
		color-scheme: light dark;
	}

	html{
		font-family: 'Onest Variable',system-ui,sans-serif;
	}

	body { 
		background: #050505;
		display: flex;
		flex-direction: column;
		justify-content: center;
		height: 100vh;
	}
</style>
